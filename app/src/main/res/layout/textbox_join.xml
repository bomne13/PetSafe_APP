<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="아이디"
        android:textColor="#7e7e7e"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/LayoutLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundborder_g4"
        android:gravity="center">


        <EditText
            android:id="@+id/editText"
            android:layout_weight="1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:backgroundTint="@color/white"
            android:hint="아이디를 입력해주세요."
            android:inputType="text"
            android:textColor="#7e7e7e"
            android:textColorHint="#7e7e7e"
            android:textSize="14dp"
            android:gravity="left|center"/>

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/delBtn"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:background="@drawable/ic_inputdelicon"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_weight="0"
            android:id="@+id/ConfirmBtn"
            style="@style/CustomTextButton_g"
            android:text="중복 확인"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/GuideTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아이디를 입력해주세요."
        android:textColor="@color/red_0"
        android:textSize="12dp"
        android:textStyle="bold"/>




</LinearLayout>