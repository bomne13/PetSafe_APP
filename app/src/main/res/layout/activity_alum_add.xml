<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/ic_backicon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="일정 추가"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>


            <ImageButton
                android:layout_weight="0"
                android:id="@+id/checkBtn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/ic_check" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/text_color_choice"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/circle_y"
                android:layout_marginRight="7dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/selecteColorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#FFE699"/>

            <EditText
                android:id="@+id/alumName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="일정 이름"
                android:textSize="14dp"
                android:textColorHint="#7e7e7e"
                android:gravity="left|center"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/date_choice"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_calendar"
                android:layout_marginRight="14dp" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="일정 날짜를 선택해 주세요."
                android:textSize="14dp"
                android:textColor="#999"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/time_choice"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_timer"
                android:layout_marginRight="14dp" />
            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="일정 시간을 선택해 주세요."
                android:textSize="14dp"
                android:textColor="#999" />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/text"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_memoicon"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="4dp"/>

            <EditText
                android:id="@+id/cmemo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="메모를 입력해 주세요."
                android:textColorHint="#7e7e7e"
                android:textColor="#7e7e7e"
                android:textSize="14dp"
                android:gravity="left|center"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#EEEEEE" />


    </LinearLayout>



</LinearLayout>