<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".idresultActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <!--상단바(뒤로가기, 현재 페이지명)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_backicon" />

            <TextView
                android:id="@+id/topText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:text="아이디 찾기 결과"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="고객님의 정보와 일치하는 아이디는 다음과 같습니다."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/LayoutLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/roundborder_g4"
            android:gravity="center"
            android:padding="14dp">

            <TextView
                android:id="@+id/useridTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:text="testid0101"
                android:textColor="#7e7e7e"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#EEEEEE"
                android:layout_weight="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="2"
                android:text="가입일 : "
                android:textColor="#7e7e7e"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/regdateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="2"
                android:text="2020.00.00"
                android:textColor="#7e7e7e"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="비밀번호가 기억나지 않으세요?"
                android:textColor="#7e7e7e"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/pwdSearchBtn"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:text="비밀번호 찾기"
                android:textColor="#4682B4"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbtn_y"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="로그인"
            android:textColor="#7e7e7e"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>